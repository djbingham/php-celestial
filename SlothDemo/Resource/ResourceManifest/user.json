{
	"name": "User",
	"table": "User",
	"primaryAttribute": "id",
	"attributes": {
		"id": true,
		"username": true,
		"password": true,
		"forename": true,
		"surname": true,
		"age": true,
		"address": {
			"userId": true,
			"houseName": true,
			"postcode": true
		},
		"posts": {
			"id": true,
			"authorId": true,
			"content": true
		},
		"friends": {
			"id": true,
			"username": true,
			"forename": true,
			"surname": true,
			"friends": {
				"id": true,
				"username": true,
				"forename": true,
				"surname": true
			}
		}
	},
	"validators": [
		{
			"rule": "comparison.contains",
			"negate": true,
			"attributes": {
				"needle": "id",
				"haystack": ["friends.id"]
			},
			"options": {
				"strict": false
			}
		},
		{
			"rule": "comparison.unique",
			"attributes": "friends.id"
		},
		{
			"rule": "text.text",
			"attributes": ["username", "password", "forename", "surname", "address.postcode"],
			"independent": true
		}
	]
}
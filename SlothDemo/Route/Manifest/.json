{
	"": {
		"engine": "mustache",
		"path": "home.html"
	},
	"using/request/params": {
		"engine": "mustache",
		"path": "usingRequest.html",
		"dataProviders": {
			"request": {
				"engine": "request"
			}
		}
	},
	"using/helper/functions": {
		"engine": "handlebars",
		"path": "helperDemo.html",
		"dataProviders": {
			"greater": {
				"engine": "request.getProperty",
				"options": {
					"property": "greater"
				}
			},
			"lesser": {
				"engine": "request.getProperty",
				"options": {
					"property": "lesser"
				}
			}
		},
		"options": {
			"helpers": {
				"ifLessThan": "SlothDemo\\ViewHelper\\Handlebars\\MathComparison::ifLessThan"
			}
		}
	},
	"options": {
		"engine": "handlebars",
		"path": "optionsDemo.html",
		"dataProviders": {
			"options": {
				"engine": "static",
				"options": {
					"data": [
						{
							"id": 101,
							"name": "Item 1"
						},
						{
							"id": 102,
							"name": "Item 2"
						},
						{
							"id": 103,
							"name": "Item 3"
						}
					]
				}
			},
			"selected": {
				"engine": "static",
				"options": {
					"data": 102
				}
			}
		}
	}
}
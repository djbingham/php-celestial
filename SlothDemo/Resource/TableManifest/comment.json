{
	"fields": {
		"id": {
			"type": "integer(11)",
			"field": "id",
			"autoIncrement": true,
			"validators": {}
		},
		"postId": {
			"type": "integer(11)",
			"field": "postId",
			"validators": {}
		},
		"parentId": {
			"type": "integer(11)",
			"field": "parentId",
			"validators": {}
		},
		"authorId": {
			"type": "integer(11)",
			"field": "authorId",
			"validators": {}
		},
		"content": {
			"type": "text",
			"field": "content",
			"validators": {}
		}
	},
	"links": {
		"author": {
			"type": "manyToOne",
			"table": "User",
			"onInsert": "ignore",
			"onUpdate": "ignore",
			"onDelete": "ignore",
			"joins": {
				"this.authorId": "author.id"
			}
		},
		"post": {
			"type": "manyToOne",
			"table": "Post",
			"onInsert": "ignore",
			"onUpdate": "ignore",
			"onDelete": "ignore",
			"joins": {
				"this.postId": "Post.id"
			}
		},
		"replies": {
			"type": "oneToMany",
			"table": "Comment",
			"onInsert": "ignore",
			"onUpdate": "ignore",
			"onDelete": "delete",
			"joins": {
				"this.id": "replies.parentId"
			}
		}
	}
